<%= form_tag(books_search_path, method: :get) do %>
  <%= text_field_tag :title, @title %>
  <%= button_tag type: 'submit' %>
<% end %>
<% if @books %>
  <% @books.each do |book| %>
    <%= image_tag book.image_url %>
    <%= link_to book.title, book_path(book.id) %>
    <%= book.author %>
  <% end %>
<% end %>