<% if !Like.exists?(user_id: current_user.id, book_id: book.id) %>
  <%= link_to book_likes_path(book.id), method: :post, remote: true, class:"like-btn" do %>
    お気に入り<%= book.likes.count %>
  <% end %>
<% else %>
  <%= link_to book_like_path(book_id: book.id, id: book.likes[0].id), method: :delete, remote: true, class:"like-btn" do %>
    登録済み<%= book.likes.count %>
  <% end %>
<% end %>