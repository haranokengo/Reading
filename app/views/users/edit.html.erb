<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3 text-center">
      <h1>編集画面</h1>
      <%= flash[:notice] %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :名前 %><br>
          <%= f.text_field :name, autoforcus: true, autocomplete: "name", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム %><br>
          <%= f.text_field :nickname, autoforcus: true, autocomplete: "nickname", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30" %>
        </div>
        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>