<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
      <h2>ログイン</h2>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render 'layouts/error', model: @user %>
        <div class="form-group">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autoforcus: true, autocomplete: "name", :size => "30" %>
        </div>
      
        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", :size => "30" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
</div>