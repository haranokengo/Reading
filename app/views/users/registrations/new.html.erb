<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center">
        <h2>新規登録</h2>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>  
        <%= render 'layouts/error', model: @user %>
        <div class="form-group">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autoforcus: true, autocomplete: "name", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :nickname, autoforcus: true, autocomplete: "nickname", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", :size => "30" %>
        </div>
        <div class="form-group">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "30" %>
        </div>
        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>