<%= form_with model: @category, url:admin_categorys_path, local:true do |f| %>
  <h4>カテゴリー名</h4>
  <%= f.text_field :name %>
  <%= f.submit '投稿' %>
<% end %>

<table>
  <tr>
    <th>カテゴリー名</th>
  </tr>
  <tr>
  <% @categorys.each do |category| %>
    <td><%= category.name %></td>
    <td><%= link_to '編集', edit_admin_category_path(category.id) %></td>
    <td><%= link_to '削除', admin_category_path(category), method: :destroy, "data-confirm" => "本当に削除しますか？" %></td>
  <% end %>
  </tr>
</table>